<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.error {
			color: red;
		}
	</ui:style>
	<g:Grid height="180" width="250">
		<g:row>
			<g:cell />
			<g:customCell>
				<g:Label styleName="{style.error}" ui:field="errorLabel"
					text="Error Message Here" height="30" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="Username" wordWrap="false"
					horizontalAlignment="ALIGN_RIGHT" />
			</g:customCell>
			<g:customCell>
				<g:TextBox ui:field="username" maxLength="30" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="Password" horizontalAlignment="ALIGN_RIGHT" />
			</g:customCell>
			<g:customCell>
				<g:PasswordTextBox ui:field="password" maxLength="30" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:cell />
			<g:customCell>
				<g:Button width="99px" ui:field="signIn">Sign In</g:Button>
			</g:customCell>
		</g:row>
		<g:row>
			<g:cell />
			<g:customCell>
				<g:Hyperlink text="New User" ui:field="newUser" />
			</g:customCell>
		</g:row>
	</g:Grid>
</ui:UiBinder>