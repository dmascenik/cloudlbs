<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.error {
			color: red;
		}
	</ui:style>
	<g:Grid height="180" width="250">
		<g:row>
			<g:cell />
			<g:customCell>
				<g:Label text="Error Message" styleName="{style.error}"
					ui:field="errorLabel" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="Username" wordWrap="false"
					horizontalAlignment="ALIGN_RIGHT" />
			</g:customCell>
			<g:customCell>
				<g:TextBox ui:field="username" maxLength="30" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="Email" horizontalAlignment="ALIGN_RIGHT" />
			</g:customCell>
			<g:customCell>
				<g:TextBox ui:field="email" maxLength="30" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="Password" horizontalAlignment="ALIGN_RIGHT" />
			</g:customCell>
			<g:customCell>
				<g:PasswordTextBox ui:field="password" maxLength="30" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:Label text="Confirm" horizontalAlignment="ALIGN_RIGHT" />
			</g:customCell>
			<g:customCell>
				<g:PasswordTextBox ui:field="passwordConf"
					maxLength="30" />
			</g:customCell>
		</g:row>
		<g:row>
			<g:cell />
			<g:customCell>
				<g:HTMLPanel>
					<g:Button width="99px" ui:field="createUser">Submit</g:Button>
					<g:Button width="99px" ui:field="cancel">Cancel</g:Button>
				</g:HTMLPanel>
			</g:customCell>
		</g:row>
	</g:Grid>
</ui:UiBinder>